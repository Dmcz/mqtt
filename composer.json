{
  "name": "simps/mqtt",
  "description": "MQTT Coroutine Client for PHP",
  "keywords": [
    "php",
    "simps",
    "mqtt",
    "swoole",
    "client",
    "coroutine",
    "mqtt_client",
    "mqtt_protocol"
  ],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Luffy",
      "email": "lufei@simps.io"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ext-mbstring": "*",
    "ext-swoole": ">=4.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "Simps\\MQTT\\": "src/"
    }
  },
  "scripts": {
    "cs-check": "/usr/bin/env php ./vendor/bin/php-cs-fixer fix --dry-run",
    "cs-fix": "/usr/bin/env php ./vendor/bin/php-cs-fixer fix"
  }
}
